{
  "compilerOptions": {
    "jsx": "react-native",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/@steroidsjs/core/index.d.ts"
  ]
}

